<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.santos.androidchallenge.presentation.ui.search.SearchFragment"
        tools:layout="@layout/fragment_search"
        android:label="SearchFragment" >
        <action
            android:id="@+id/action_searchFragment_to_songFragment"
            app:destination="@id/songFragment" />
    </fragment>
    <fragment
        android:id="@+id/songFragment"
        android:name="com.santos.androidchallenge.presentation.ui.song.SongFragment"
        tools:layout="@layout/fragment_song"
        android:label="SongFragment" >
        <argument
            android:name="lyrics"
            app:argType="com.santos.androidchallenge.domain.model.Lyrics" />
    </fragment>
</navigation>